<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>คลินิครักษาแมว</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('navbar/nav') %>
    <div class="container p-0">
        <div class="row">
          <div class="col">
            <a class="btn btn-outline-dark mb-1 mt-4 fs-5" aria-current="page" href="/PostOwnerCat">+ New Case</a>
          </div>
        </div>
    </div>
    <div class="container mt-3 bg-light rounded-3 border border-1 border-dark">
        <div class="row">
            <h3 class="mt-3">วันที่รักษา</h3>
            <table class="table mt-1 mb-1 table-borderless border-top border-1 border-dark">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">วันที่</th>
                    <th scope="col">จํานวนแมวที่มารักษา</th>
                    <th scope="col">ค่ารักษา</th>
                  </tr>
                </thead>
                <tbody>
                    <% let grandTotal = 0; %>
                    <% let CatTotal = 0; %>
                    <% treatments.forEach((treatment, index) => { %>
                        <tr class="table-info">
                            <td><%= index + 1 %></td>
                            <td><%= treatment._id %></td>
                            <td><%= treatment.count %> ตัว</td>
                            <td>฿ <%= treatment.totalPayment %></td>
                        </tr>
                        <% grandTotal += treatment.totalPayment; %>
                        <% CatTotal += treatment.count; %>
                    <% }) %>
                </tbody>
                <tbody>
                    <tr>
                        <td></td>
                        <td><strong>รวมทั้งหมด</strong></td>
                        <td><strong><%= CatTotal %> ตัว</strong></td>
                        <td><strong>฿ <%= grandTotal %></strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>